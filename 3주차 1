#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main()
{
    int a;
    printf("상품의 종류를 입력해주세요: ");
    scanf("%d", a);
    int b[a];
    printf("상품별 입고 수량을 입력해주세요 ex)8 5 3 4 9 : ");
    for(int i = 1; i<=a; i++){
        scanf("%d", &b[a]);
    }
    int c[a];
    printf("상품별 판매 수량을 입력해주세요 ex)5 2 2 2 4 : ");
    for(int i=1; i<=a; i++){
        scanf("%d", &c[a]);
    }
    
}
